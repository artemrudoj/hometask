#include "log.h"


/* Пока реализован только линейный буффер, причем конечного размера (SIZE_OF_SHARED_BUFFER), размер единичного лога так же пока ограничен (MAX_LEN_OF_LOG) */


int main()
{
	int i = 10;
	double d = 2.24;
	char c = 'c';
	if ( init_log( D, "1.log") == -1)
	{
		shm_unlink( SHAREDMEM_FILENAME);
		return -1;
	}
	ALOGA( "ALL");
	ALOGD( "debug");
	Asleep(4);
	ALOGW ( "warningwarningwarningwarningwarningwarningwarningwarningwarningwarningwarningwarningwarningwarning");
	ALOGE ( "errorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerrorerror %d %f %c", i, d, c);
	//sleep(4);
	ALOGF ( "fatal error\n");
	return 0;
}
